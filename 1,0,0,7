#include <iostream>
using namespace std;

auto main (int argc, char** argv) -> int {
    auto a = stoi(argv[1]);
    if (a > 0)
        cout << "1" << endl;
    else if (a < 0)
        cout << "-1" << endl;
    else
        cout << "0" << endl;
    return 0;
}#include <iostream>
